/**index.wxss**/

page {
  background: #f2f2f2;
}

.add {
  display: flex;
  flex-direction: column;
  position: fixed;
  bottom: 2em;
  height: 130px;
  width: 100%;
  z-index: 300;
  left: 0;
}

.add-select {
  width: 100%;
  height: 80px;
}

.item {
  display: flex;
  flex-direction: column;
  text-align: center;
  margin: 0 4px;
  border-radius: 14px;
  background-color: rgb(209, 198, 198);
}

.icon {
  display: inline-block;
  width: 50px;
  height: 50px;
  background-size: cover;
  margin: 0 auto;
}

.shadow {
  display: block;
  width: 100%;
  height: 100%;
  bottom: 0;
  position: fixed;
  top: 0px;
  left: 0px;
  background-color: #1a1313;
  opacity: 0.7;
  z-index: 200;
}

.add-close {
  display: inline-block;
  width: 100%;
  height: 50px;
}

.close-item {
  display: block;
  margin: 0 auto;
  text-align: center;
  height: 38px;
  border-radius: 38px;
  line-height: 38px;
}

.item-add {
  padding: 24rpx;
}

.item-name {
  font-size: 32rpx;
  font-weight: normal;
  padding: 24rpx;
  background: #fff;
}
